#sign_in_modal.modal.fade
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", type: "button"}
          %i.fa.fa-times-circle
        %h4#SignInModal.modal-title Log In
        %p Add your credential for log in
      = simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :remote => true, :format => :js,  :html => {:class => "form-signin"}) do |f|
        .modal-body
          //= f.error_notification
          = f.input :email, :autofocus => true, :label => false, :input_html => {:class => 'form-control'}, :placeholder => "E-mail"
          = f.input :password, :label => false, :input_html => {:class => 'form-control'}, :placeholder => "Password"
          = f.input :remember_me, as: :boolean if devise_mapping.rememberable?
        .modal-footer
          .form-actions
            %a{ :href => "#", :class => "btn btn-sm", "data-dismiss" => "modal" } Annulla
            = f.button :submit, "Sign in", :class => "btn btn-sm btn-theme"
